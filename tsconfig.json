{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": [
            "ESNext",
            "DOM",
        ],
        "strict": true,
        "esModuleInterop": false,
        "allowJs": true,
        "noImplicitAny": false,
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "src",
    ]
}